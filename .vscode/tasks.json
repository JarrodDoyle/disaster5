{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/disaster5/disaster5.csproj",
                "-c", "${input:buildConfig}",
                "-r", "${input:buildRuntime}",
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/disaster5/disaster5.csproj",
                "-c", "${input:buildConfig}",
                "-r", "${input:buildRuntime}",
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--project", "${workspaceFolder}/disaster5/disaster5.csproj",
                "-c", "${input:buildConfig}",
                "-r", "${input:buildRuntime}",
                "--", "${fileWorkspaceFolder}",
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        }
    ],
    "inputs": [
        {
            "id": "buildConfig",
            "type": "pickString",
            "description": "Configuration",
            "options": ["Debug", "Release"],
            "default": "Release"
        },
        {
            "id": "buildRuntime",
            "type": "pickString",
            "description": "Runtime",
            "options": ["win-x64", "linux-x64"],
        }
    ]
}